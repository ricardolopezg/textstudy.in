<link href='http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css' rel='stylesheet' type='text/css'>

<div class="off-canvas-wrap" data-offcanvas>
  <div class="inner-wrap">
    <aside class="left-off-canvas-menu">
      <div class="icon-bar vertical five-up">
        
        <div class="menu_item">
          <a class="item">
            <i class="fi-graph-bar"></i>
            <label>Dashboard</label>
          </a>
        </div>
        
        <div class="menu_item">
          <a class="item">
           <i class="fi-book"></i>
            <label>Subjects</label>
          </a>
        </div>  

        <div class="menu_item">
          <a class="item">
            <i class="fi-credit-card"></i>
            <label>Billing</label>
          </a>
        </div>  
        
        <div class="menu_item">
          <a class="item">
            <i class="fi-torsos-male-female"></i>
            <label>Profile</label>
          </a>
        </div>  

        <div class="menu_item">
          <a class="item">
            <i class="fi-mail"></i>
            <label>Support</label>
          </a>
        </div>  

        <div class="menu_item">
          <a class="item">
            <i class="fi-power"></i>
            <label>Log Off</label>
          </a>
        </div>  
      </div>  
    </aside>

    <!-- main content goes here -->
    <div id="content_container">
      <header class="row">
        <div class="small-12 columns">
          <h3 class="text-center">Active Subscription</h3>
        </div>
      </header>
      
      <div class="row u-max-full-width">   
        <div class="two columns">
          <img src="https://ununsplash.imgix.net/photo-1429277005502-eed8e872fe52?fit=crop&fm=jpg&h=700&q=75&w=1050" alt="" />
        </div>
        <div class="medium-6 columns">
          <% @current_user_subscriptions.each do |s| %>
            user_id: 
            <%= s.user_id %><br>
            subj_id: 
            <%= s.subject_id %><br>
            subj name:
            <%= @subjects.find(s.subject_id).name %><br>
            subsection:
            <%= @subjects.find(s.subject_id).subsection %><br>
            active: 
            <span id="subscription_status_<%= s.id %>"><%= s.active %></span>
        
            <% if s.active == false %>
              <%= link_to "Activate", active_subscription_path(s.id), id: "activate_link_#{s.id}", method: :patch, remote: true %><br><br>
            <% else %>
              <%= link_to "Deactivate", active_subscription_path(s.id), id: "deactivate_link_#{s.id}", method: :patch, remote: true %><br><br>
            <% end %>
          <% end %><br>
        </div>
      </div>


      <div class="row">   
        <div class="twelve columns">
          <img src="https://ununsplash.imgix.net/photo-1429277005502-eed8e872fe52?fit=crop&fm=jpg&h=700&q=75&w=1050" alt="" />
        </div>
        <div class="medium-6 columns">
          <% @current_user_subscriptions.each do |s| %>
            user_id: 
            <%= s.user_id %><br>
            subj_id: 
            <%= s.subject_id %><br>
            subj name:
            <%= @subjects.find(s.subject_id).name %><br>
            subsection:
            <%= @subjects.find(s.subject_id).subsection %><br>
            active: 
            <span id="subscription_status_<%= s.id %>"><%= s.active %></span>
        
            <% if s.active == false %>
              <%= link_to "Activate", active_subscription_path(s.id), id: "activate_link_#{s.id}", method: :patch, remote: true %><br><br>
            <% else %>
              <%= link_to "Deactivate", active_subscription_path(s.id), id: "deactivate_link_#{s.id}", method: :patch, remote: true %><br><br>
            <% end %>
          <% end %><br>
        </div>
      </div>
    </div> <!-- END CONTENT_CONTAINER  -->



  </div>
</div>