<div id="content_container">
  <div class="pricing center">
    <div class="row">
      <h3>Current Card Info</h3>
      <!-- Create Customer or Display Last 4 Here -->
      <% if @customer.blank? %>
        <p class="section-description u-max-full-width center">
          Looks like you need to add a credit card!
        </p>
        <%= link_to("Add Card", customer_profiles_path, class: "button button-primary pricing_btn", id: "card-button") %>
        <%= form_tag customer_profiles_path, id: "add_card" do %>
          <article>
            <% if flash[:error].present? %>
              <div id="error_explanation">
                <p><%= flash[:error] %></p>
              </div>
            <% end %>
          </article>
          <script src="https://checkout.stripe.com/checkout.js"></script>
          <script>
            var handler = StripeCheckout.configure({
              key: '<%= Rails.configuration.stripe[:publishable_key] %>',
              // image: '/img/documentation/checkout/marketplace.png',
              locale: 'auto',
              email: '<%= current_user.email %>',
              token: function(response) {
                // You can access the token ID with `token.id`.
                // Get the token ID to your server-side code for use.
                var tokenInput = $("<input type=hidden name=stripeToken />").val(response.id);
                var emailInput = $("<input type=hidden name=stripeEmail />").val(response.email);
                 $("#add_card").append(tokenInput).append(emailInput).submit();
              }
            });
            $('#card-button').on('click', function(e) {
              // Open Checkout with further options:
              handler.open({
                name: 'Add Credit Card',
                // description: 'Add Credit Card',
                allowRememberMe: false,
                panelLabel: 'Add Card'
              });
              e.preventDefault();
            });
            // Close Checkout on page navigation:
            $(window).on('popstate', function() {
              handler.close();
            });
          </script>
        <% end %>
      <% else %>
        <p class="section-description u-max-full-width">
          <span>Current Card Last 4:</span> <%= @customer.sources.data.first.last4 %>
        </p>
        <%= link_to("Change Card", customer_profiles_path, class: "button button-primary pricing_btn", id: "card-button") %>
        <%= form_tag customer_profiles_path, id: "change_card" do %>
          <article>
            <% if flash[:error].present? %>
              <div id="error_explanation">
                <p><%= flash[:error] %></p>
              </div>
            <% end %>
          </article>
          <script src="https://checkout.stripe.com/checkout.js"></script>
          <script>
            var handler = StripeCheckout.configure({
              key: '<%= Rails.configuration.stripe[:publishable_key] %>',
              // image: '/img/documentation/checkout/marketplace.png',
              locale: 'auto',
              email: '<%= current_user.email %>',
              token: function(response) {
                // You can access the token ID with `token.id`.
                // Get the token ID to your server-side code for use.
                var tokenInput = $("<input type=hidden name=stripeToken />").val(response.id);
                var emailInput = $("<input type=hidden name=stripeEmail />").val(response.email);
                 $("#change_card").append(tokenInput).append(emailInput).submit();
              }
            });
            $('#card-button').on('click', function(e) {
              // Open Checkout with further options:
              handler.open({
                name: 'Change Credit Card',
                // description: 'Change Credit Card',
                allowRememberMe: false,
                panelLabel: 'Change Card'
              });
              e.preventDefault();
            });
            // Close Checkout on page navigation:
            $(window).on('popstate', function() {
              handler.close();
            });
          </script>
        <% end %>

        <% if !@active %>
          <div class="row">
            <p class="section-description u-max-full-width center">
              Looks like you need to select a plan!
            </p>
          </div>
          <div class="row">
            <div class="four columns">
              <ul class="active-tb">
                <li class="pricing_info pricing_title pricing_cost">Monthly Subscription</li>
                <li class="pricing_info">Choose One Subject</li>
                <li class="pricing_info">Switch Subjects Anytime</li>
                <li class="pricing_info">5 SMS Questions Sent Daily</li>
                <li class="pricing_info">Analyze Your Reponse History</li>
                <li class="pricing_info pricing_cost">$9.95 per Month</li>
                <li><%= link_to("Choose", plan_profiles_path(:plan => "Monthly"), class: "button button-primary pricing_btn plan_btn", id: "monthly_button", method: :post) %></li>
              </ul>
            </div>

            <div class="four columns">
              <ul class="active-tb">
                <li class="pricing_info pricing_title pricing_cost">Bi-Annual Subscription</li>
                <li class="pricing_info">All The Benefits of Our Monthly Subscription</li>
                <li class="pricing_info">GREAT VALUE</li>
                <li class="pricing_info">10% Discount</li>
                <li class="pricing_info">*Monthly Price Based on 6-Month Subscription</li>
                <li class="pricing_info pricing_cost">$8.95 per Month*</li>
                <li><%= link_to("Choose", plan_profiles_path(:plan => "Bi-Annual"), class: "button button-primary pricing_btn plan_btn", id: "bi_annual_button", method: :post) %></li>
              </ul>
            </div>

            <div class="four columns">
              <ul class="active-tb">
                <li class="pricing_info pricing_title pricing_cost">One Year Subscription</li>
                <li class="pricing_info">All The Benefits of Our Monthly Subscription</li>
                <li class="pricing_info">BEST VALUE</li>
                <li class="pricing_info">15% Discount</li>
                <li class="pricing_info">*Monthly Price Based on a Yearly Subscription</li>
                <li class="pricing_info pricing_cost">$8.45 per Month*</li>
                <li><%= link_to("Choose", plan_profiles_path(:plan => "Annual"), class: "button button-primary pricing_btn plan_btn", id: "annual_button", method: :post) %></li>
              </ul>
            </div>
          </div>

        <% else %>

          <div class="row center">
            <h3>Current Plan Info</h3>
            <p class="section-description u-max-full-width center">     
              <span>Current Plan:</span> <%= @plan %>
              <br>
            </p>
            <p class="section-description u-max-full-width center">
              <% if @history.first.cancel_at_period_end == true %>
                <strong>Please note, your plan will terminate on <%= Time.at(@history.first.current_period_end).strftime("%-m/%-d/%y") %> and will NOT be renewed.</strong>
                <%= link_to("reactivate plan button needs to be configured - don't click this", billing_profiles_path, class: "button button-primary pricing_btn plan_btn", method: :post) %>
              <% else %>

                <%= link_to("Cancel Current Plan", cancel_profiles_path, class: "button button-primary pricing_btn plan_btn", method: :post) %>
              <% end %>
            </p>     
          </div>

          <div class="row">            
            <h3>History</h3>
            <p class="section-description u-max-full-width">
              <table>
                <tr class="title">
                  <th>No.</th>
                  <th>Date</th>
                  <th>Plan</th>
                  <th>Amount</th>
                </tr>

                <% @history.each.with_index(1) do |h, i| %>
                  <tr>
                    <td><%= i %></td>
                    <td><%= Time.at(h.created).strftime("%-m/%-d/%y") %></td>
                    <td><%= h.plan.name %></td>
                    <td><%= number_to_currency(h.plan.amount.to_i / 100.00) %></td>
                  </tr>
                <% end %>
              </table>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
</div>